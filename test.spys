__DATA__
let println 	"println"
let print 		"print"
let getstr 		"getstr"
let strlen		"strlen"

let	message		"Enter a string and this program will tell you the length of it: "
let output		"The length of the string you entered is: %d"

__CODE__

jmp 		start

test:
	push	rbp
	mov		rbp, rsp

	mov		rex, message
	push	1
	ccall	print

	push	0
	ccall	getstr

	mov		rex, rax
	push	1
	ccall	strlen

	mov		rex, output
	mov		rfx, rax
	push	2
	ccall	println	

	mov		rsp, rbp
	pop		rbp
	ret

start:
	
	call 	test

	exit